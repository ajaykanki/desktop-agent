# Environment Configuration for Desktop Agent Worker
# Copy this file to .env and fill in your values
# For non-production environments, you can use .env.dev, .env.staging, etc.

# General Environment Settings for API Service
# ----------------------------
ENV=dev
KEYRING_SERVICE_NAME=desktop-agent

# API Configuration
# ----------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_KEY_HEADER=X-API-Key
API_PREFIX=/api
API_TITLE="Desktop Worker Agent API"
API_VERSION=0.1.0
API_DESCRIPTION="A desktop worker agent to execute tasks that require a GUI"

# Database Configuration
# ----------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_NAME=postgres

# Worker Configuration
# ----------------------------
WORKER_CONCURRENCY=1
WORKER_NAME="Name of the Worker"
WORKER_QUEUES=["list", "of", "queues", "to", "listen", "to"]
WORKER_IMPORT_PATHS='["dotted", "path", "to", "tasks"]'
WORKER_API_KEY="Your API Key"

# O365 Configuration
# ----------------------------
O365_CLIENT_ID="Your O365 Client ID"
O365_CLIENT_SECRET="Your O365 Client Secret"
O365_TENANT_ID="Your O365 Tenant ID"
O365_MAIN_RESOURCE="Your O365 Main Resource"

# WMILL Configuration
# ----------------------------
WMILL_INSTANCE_URL="Your WMILL Instance URL"
WMILL_SUPER_ADMIN_TOKEN="Your WMILL Super Admin Token"

# SAP Configuration
# ----------------------------
SAP_USERNAME="Your SAP Username"
SAP_PASSWORD="Your SAP Password"
SAP_CONNECTION_NAME="Your SAP Connection Name"
SAP_WINDOW_TITLE="SAP Logon 770"

# Logging Configuration
# ----------------------------
LOG_LEVEL=INFO
LOG_FORMAT=
LOG_ROTATION="1 month"
LOG_RETENTION=
LOG_COMPRESSION=zip
LOG_FILE=
LOG_ERROR_FILE=
